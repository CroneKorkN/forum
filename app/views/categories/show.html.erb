<h2><%= editable @category, :name %></h2>

<%= editable @category, :description %>

<!-- sub categories -->
<ul>
  <%= render partial: "sub_category", collection: @category.categories, as: :category %>
</ul>

<!-- topics -->
<ul class=topics>
  <%= render @category.topics %>
  <li><%= link_to 'New Topic', new_category_topic_path(@category) %></li>
</ul>


